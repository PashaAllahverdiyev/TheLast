@model Hotel.Business.ViewModels.BathroomVM.BathroomListViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BathroomListViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shower" /> @Html.DisplayNameFor(model => model.Shower)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Toileet" /> @Html.DisplayNameFor(model => model.Toileet)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BathroomSupplies" /> @Html.DisplayNameFor(model => model.BathroomSupplies)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Dressing" /> @Html.DisplayNameFor(model => model.Dressing)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

