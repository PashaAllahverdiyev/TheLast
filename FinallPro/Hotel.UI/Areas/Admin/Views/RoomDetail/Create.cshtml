@model Hotel.Business.ViewModels.RoomDetailVM.RoomDetailCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RoomDetailCreateViewModel</h4>
<hr />
<div class="row">   
    <div class="col-md-4">
        <form method="post" asp-controller="RoomDetail" asp-action="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Service" /> @Html.DisplayNameFor(model => model.Service)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MiniBar" /> @Html.DisplayNameFor(model => model.MiniBar)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tv" /> @Html.DisplayNameFor(model => model.Tv)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AirController" /> @Html.DisplayNameFor(model => model.AirController)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

